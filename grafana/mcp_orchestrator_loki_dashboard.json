{
  "title": "MCP Orchestrator Dashboard",
  "uid": "mcp-orchestrator-dashboard",
  "schemaVersion": 38,
  "version": 1,
  "editable": true,
  "style": "dark",
  "time": {
    "from": "now-12h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "trace_id",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki" },
        "label": "Trace ID",
        "query": "label_values(trace_id)",
        "includeAll": false,
        "multi": true
      },
      {
        "name": "session_id",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki" },
        "label": "Session ID",
        "query": "label_values(session_id)",
        "includeAll": false,
        "multi": true
      },
      {
        "name": "channel",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki" },
        "label": "Channel",
        "query": "label_values(channel)",
        "includeAll": true,
        "multi": true
      },
      {
        "name": "intent",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki" },
        "label": "Intent",
        "query": "label_values(intent)",
        "includeAll": true,
        "multi": true
      },
      {
        "name": "route",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki" },
        "label": "Route",
        "query": "label_values(route)",
        "includeAll": true,
        "multi": true
      }
    ]
  },

  "panels": [

    {
      "type": "logs",
      "title": "Raw MCP Orchestrator Logs",
      "id": 1,
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "{service_type=\"orchestrator\"}"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 10 }
    },

    {
      "type": "stat",
      "title": "Total Requests",
      "id": 2,
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "count_over_time({service_type=\"orchestrator\", event_type=\"input\"}[1h])"
        }
      ],
      "gridPos": { "x": 0, "y": 10, "w": 6, "h": 4 }
    },

    {
      "type": "stat",
      "title": "Total Errors",
      "id": 3,
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "count_over_time({service_type=\"orchestrator\", event_type=\"error\"}[1h])"
        }
      ],
      "gridPos": { "x": 6, "y": 10, "w": 6, "h": 4 }
    },

    {
      "type": "stat",
      "title": "Avg Latency (ms)",
      "id": 4,
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "avg_over_time({service_type=\"orchestrator\", latency_ms!=\"\"}[1h] | unwrap latency_ms)"
        }
      ],
      "gridPos": { "x": 12, "y": 10, "w": 6, "h": 4 }
    },

    {
      "type": "stat",
      "title": "Unique Users",
      "id": 5,
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "count(count_over_time({service_type=\"orchestrator\", user!=\"\"}[12h]) by (user))"
        }
      ],
      "gridPos": { "x": 18, "y": 10, "w": 6, "h": 4 }
    },

    {
      "id": 6,
      "title": "Latency Over Time",
      "type": "timeseries",
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "{service_type=\"orchestrator\", latency_ms!=\"\"} | unwrap latency_ms"
        }
      ],
      "gridPos": { "x": 0, "y": 14, "w": 24, "h": 8 }
    },

    {
      "id": 7,
      "title": "Intent Heatmap",
      "type": "bargauge",
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "count_over_time({service_type=\"orchestrator\", intent!=\"\"}[6h]) by (intent)"
        }
      ],
      "gridPos": { "x": 0, "y": 22, "w": 12, "h": 8 }
    },

    {
      "id": 8,
      "title": "Route Distribution",
      "type": "bargauge",
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "count_over_time({service_type=\"orchestrator\", route!=\"\"}[6h]) by (route)"
        }
      ],
      "gridPos": { "x": 12, "y": 22, "w": 12, "h": 8 }
    },

    {
      "id": 9,
      "title": "Error Logs by Route",
      "type": "table",
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "{service_type=\"orchestrator\", event_type=\"error\"}"
        }
      ],
      "gridPos": { "x": 0, "y": 30, "w": 24, "h": 10 }
    },

    {
      "id": 10,
      "title": "Trace Viewer (Filtered by trace_id)",
      "type": "logs",
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "{service_type=\"orchestrator\", trace_id=~\"$trace_id\"}"
        }
      ],
      "gridPos": { "x": 0, "y": 40, "w": 24, "h": 10 }
    }

  ]
}
